<UserControl x:Class="Client.CreateLobby"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             xmlns:viewmodel="clr-namespace:Client.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <viewmodel:CreateLobbyViewModel/>
    </UserControl.DataContext>
    <DockPanel
        Margin="24">
        <StackPanel
            Width="200"
            Margin="24"
            Orientation="Vertical"
            DockPanel.Dock="Left">
            <Label>Number of players</Label>
            <ComboBox 
                ItemsSource="{Binding NumberOfPlayers}"
                SelectedIndex="0"
                SelectionChanged="OnChangedNumberOfPlayersSelection"/>
            <Label>Number of colours</Label>
            <ComboBox
                ItemsSource="{Binding NumberOfColours}"
                SelectedIndex="0"/>
        </StackPanel>
        <StackPanel
            Orientation="Vertical"
            Margin="24">
            <Label>Bots</Label>
            <ListBox
                ItemsSource="{Binding Bots}">
                
            </ListBox>
            <CheckBox/>
            <Button
                Click="OnClickAddBotButton">
                Add bot
            </Button>
        </StackPanel>
        <StackPanel
            Margin="24"
            Orientation="Vertical"
            DockPanel.Dock="Right"
            Width="300">
            <Label>Connected players</Label>
            <ListBox
            ItemsSource="{Binding ConnectedPlayers}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Username}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </DockPanel>
</UserControl>
